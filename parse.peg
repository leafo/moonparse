
start <- block space !.
space <- [ \t]*
break <- "\n"
stop <- break / !. # line break or end of file

block <- &{ start("block") } line (break line)* &{ stop("block") } / &{ reject("block") }

line <- statement / empty_line

empty_line <- space &stop
statement <- <space> &{ check_indent(yytext) } exp space &stop

op <- space < [-+] > &{ push_string(yytext) }

exp <- &{ start("exp") } value (op value)* &{ stop("exp"), flatten_last() } / &{ reject("exp") }

value <- space (number / word)
number <- < [0-9]+ > &{ push_simple("number", yytext) }
word <- < [a-zA-Z_] [a-zA-Z_0-9]* > &{ push_simple("word", yytext) }

